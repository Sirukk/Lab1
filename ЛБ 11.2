using System;
using System.Globalization;

class Program
{
    static void Main()
    {
        Console.Write("Введiть цiльову дату (дд.мм.рррр): ");
        string input = Console.ReadLine();

        DateTime targetDate;
        if (!DateTime.TryParseExact(input, "dd.MM.yyyy", CultureInfo.InvariantCulture, DateTimeStyles.None, out targetDate))
        {
            Console.WriteLine("Невiрний формат дати.");
            return;
        }

        DateTime today = DateTime.Today;
        TimeSpan difference = targetDate - today;

        if (difference.Days > 0)
        {
            Console.WriteLine($"До цiєї дати залишилось {difference.Days} днiв.");
        }
        else if (difference.Days < 0)
        {
            Console.WriteLine($"Ця дата вже минула {Math.Abs(difference.Days)} днiв тому.");
        }
        else
        {
            Console.WriteLine("Це сьогоднiшня дата.");
        }
    }
}
